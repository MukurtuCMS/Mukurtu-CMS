  $block->setVisibilityConfig('request_path', $visibility['request_path']);
  $block->setRegion('content');
  $block->setStatus(TRUE);
  $block->setWeight(-3);
  $block->save();

  // Language switcher.
  $block = Block::create([
    'id' => 'mukurtu_v4_languageswitcher_1',
    'settings' => [
      'id' => 'language_block:language_interface',
      'label' => t('Language Switcher'),
      'label_display' => TRUE,
      'provider' => 'language',
    ],
    'region' => 'user_menu',
    'weight' => -8,
    'plugin' => 'language_block:language_interface',
    'theme' => 'mukurtu_v4',
    'visibility' => [],
  ]);
  $block->save();
  $block->setRegion('user_menu');
  $block->setStatus(TRUE);
  $block->setWeight(3);
  $block->save();

  // Footer block.
  $tokenService = \Drupal::service('token');
  $languageManager = \Drupal::languageManager();
  $siteSettings = \Drupal::config('system.site');
  $options = [
    'langcode' => $languageManager->getCurrentLanguage()->getId(),
    'clear' => TRUE,
  ];
  $block = Block::create([
    'id' => 'mukurtu_footer_1',
    'settings' => [
      'id' => 'mukurtu_footer_1',
      'label' => t('Mukurtu Footer'),
      'label_display' => 1,
      'status' => 1,
      'logo_upload' => '',
      'email_us_text' => 'Email us at ' . $siteSettings->get('mail'),
