      'label_display' => 1,
      'provider' => 'block_content',
      'status' => 1,
    ],
    'region' => 'content',
    'plugin' => 'block_content:' . $block_content->uuid(),
    'theme' => 'mukurtu_v4',
  ]);
  $block->save();
  $block = Block::load('mukurtu_v4_front_page_featured_content');
  $block->setRegion('content');
  $visibility = $block->getVisibility();
