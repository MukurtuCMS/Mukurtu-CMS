{#
/**
 * @file
 * Default theme implementation for a fieldgroup html element.
 *
 * Available variables:
 * - title: Title of the group.
 * - title_element: Element to wrap the title.
 * - children: The children of the group.
 * - wrapper_element: The html element to use
 * - attributes: A list of HTML attributes for the group wrapper.
 *
 * @see template_preprocess_field_group_html_element()
 *
 * @ingroup themeable
 */
#}

<{{ wrapper_element }} {{ attributes }}>
{% if title %}
  <{{ title_element }}{{ title_attributes }}>{{ title }}</{{ title_element }}>
{% endif %}
  {% if collapsible %}
<div class="field-group-wrapper">
  {% endif %}
  {{ children }}
  <div class="callout">
    <div class="field__label">{{ 'Browse content'|t }}</div>
    <div class="field__items">
      <div class="field__item">
        <a href="/browse?f[0]=community_content_title%3A{{ community_name }}">
          {{ 'Browse all content in '|t ~ community_name }}
        </a>
      </div>
    </div>
  </div>
  {% if has_lc_projects %}
  <div class="callout">
    <div class="field__label">{{ 'Local Contexts'|t }}</div>
    <div class="field__items">
      <div class="field__item">
        <a href="/admin/communities/{{ community_id }}/local-contexts/projects">
          {{ 'View '|t ~ community_name ~ '\'s Local Contexts directory'|t}}
        </a>
      </div>
    </div>
  </div>
  {% endif %}
  {% if collapsible %}
</div>
{% endif %}
</{{ wrapper_element }}>
