        {% endif %}
      {% endfor %}
    </div> #}
  {# {% endif %} #}

  {% if instagram %}
	  <div class="instagram icon">{{ instagram }}</div>
  {% endif %}
  {# {% if instagram_accounts %}
    <div class="instagram-accounts">
      {% for account in instagram_accounts %}
        {% if account %}
          <div class="account">{{ account }}</div>
        {% endif %}
      {% endfor %}
    </div>
