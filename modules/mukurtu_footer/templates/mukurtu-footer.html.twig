{# {{dump()}} #}
<div class="mukurtu-footer">
  {% if logos %}
    <div class="logos">
      {% for logo in logos %}
        {% if logo %}
          <div class="logo">
            <img src={{ logo.url }} alt={{ logo.alt }}>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  {# Email. #}
  <div class="email">
  {% if email_us_text %}
    <div class="email-us-text">{{ email_us_text }}</div>
  {% endif %}
  {% if contact_email_address %}
	  <div class="contact-email-address">{{ contact_email_address }}</div>
  {% endif %}
  </div>

  {# Socials. #}
  <div class="socials">
  {% if twitter_message_text %}
	  <div class="twitter-message-text">{{ twitter_message_text }}</div>
  {% endif %}
  {% if twitter_accounts %}
    <div class="twitter-accounts">
      {% for account in twitter_accounts %}
        {% if account %}
          <div class="account">{{ account }}</div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  {% if facebook_message_text %}
	  <div class="facebook-message-text">{{ facebook_message_text }}</div>
  {% endif %}
  {% if facebook_accounts is not empty %}
    <div class="facebook-accounts">
      {% for account in facebook_accounts %}
        {% if account %}
          <div class="account">{{ account }}</div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  {% if instagram_message_text %}
	  <div class="instagram-message-text">{{ instagram_message_text }}</div>
  {% endif %}
  {% if instagram_accounts %}
    <div class="instagram-accounts">
      {% for account in instagram_accounts %}
        {% if account %}
          <div class="account">{{ account }}</div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
  </div>

  {% if copyright_message %}
    <div class="copyright-message">{{ copyright_message }}</div>
  {% endif %}
</div>
