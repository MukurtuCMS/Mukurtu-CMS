<div class="mukurtu-footer">
  {% if logos %}
    <div class="logos">
      {% for logo in logos %}
        {% if logo %}
          <div class="logo">
            <img src={{ logo.url }} alt={{ logo.alt }}>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  {# Email. #}
  <div class="email">
  {% if email_us_text %}
    <div class="email-us-text"><a href="mailto:{{ contact_email_address }}">{{ email_us_text }}</a></div>
  {% endif %}
  </div>

  {# Socials. #}
  <div class="socials">
  {% if twitter %}
	  <div class="twitter icon">{{ twitter }}</div>
  {% endif %}
