<div class="mukurtu-footer">
  {% if logos %}
    <div class="logos">
      {% for logo in logos %}
        {% if logo %}
          <div class="logo">
            <img src={{ logo.url }} alt={{ logo.alt }}>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  {# Email. #}
  <div class="email">
  {% if email_us_text %}
    <div class="email-us-text">
      <a href="mailto:{{ contact_email_address }}">
        <svg role="img" aria-label="Send an email to {{ contact_email_address }}" xmlns="http://www.w3.org/2000/svg" xml:space="preserve" width="21" height="13" fill="#ccc" stroke="#ccc" aria-hidden="true" style="margin-right: 5px"><path d="M19.87.04 19.69 0H1.31L1.2.02l9.3 8.21zM20.91.86l-6.62 5.79 6.54 5.66c.1-.18.17-.39.17-.61V1.3c0-.15-.04-.3-.09-.44zM.1.8c-.06.15-.1.32-.1.5v10.4c0 .19.05.37.12.53l6.59-5.6z"/><path d="M10.5 9.97 7.7 7.5l-6.46 5.49.07.01h18.32L13.3 7.52z"/></svg>{{ email_us_text }}
      </a>
    </div>
  {% endif %}
  </div>

  {# Socials. #}
  <div class="socials">

    {% if twitter and twitter_accounts %}
      <div class="socials__item">
        {% if twitter %}
          <div class="twitter icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 21.6 19.5" fill="#ccc" aria-hidden="true"><path d="M16.99 0h3.308l-7.227 8.26 8.502 11.24h-6.658l-5.214-6.817L3.735 19.5H.425l7.73-8.835L0 0h6.825l4.713 6.231zm-1.161 17.52h1.833L5.83 1.876H3.863z"/></svg>
            {{ twitter }}
          </div>
        {% endif %}
        {% if twitter_accounts %}
          <div class="socials__accounts">
            {% for account in twitter_accounts %}
              {% if account %}
                <div class="socials__account">
                  <a href="https://x.com/{{ account|replace({' ': ''}) }}">
                    {{ account }}
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if facebook and facebook_accounts %}
      <div class="socials__item">
        {% if facebook %}
          <div class="facebook icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10.5 20" fill="#ccc" aria-hidden="true"><path d="M7 11.5h2.5l1-4H7v-2c0-1.03 0-2 2-2h1.5V.14C10.174.097 8.943 0 7.643 0 4.928 0 3 1.657 3 4.7v2.8H0v4h3V20h4z"/></svg>
            {{ facebook }}
          </div>
        {% endif %}
        {% if facebook_accounts is not empty %}
          <div class="socials__accounts">
            {% for account in facebook_accounts %}
              {% if account %}
                <div class="socials__account">
                  <a href="https://facebook.com/{{ account|replace({' ': '.'}) }}">
                    {{ account }}
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if instagram and instagram_accounts %}
      <div class="socials__item">
        {% if instagram %}
          <div class="instagram icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="#ccc" aria-hidden="true"><path d="M11.029 0c1.125.003 1.696.009 2.189.023l.194.007c.224.008.445.018.712.03 1.064.05 1.79.218 2.427.465.66.254 1.216.598 1.772 1.153a4.9 4.9 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.012.266.022.487.03.712l.006.194c.015.492.021 1.063.023 2.188l.001.746v1.31q.003 1.094-.023 2.188l-.006.194c-.008.225-.018.446-.03.712-.05 1.065-.22 1.79-.466 2.428a4.9 4.9 0 0 1-1.153 1.772c-.5.509-1.105.902-1.772 1.153-.637.247-1.363.415-2.427.465l-.712.03-.194.006c-.493.014-1.064.021-2.189.023l-.746.001H8.974q-1.095.004-2.189-.023l-.194-.006a56 56 0 0 1-.712-.031c-1.064-.05-1.79-.218-2.428-.465a4.9 4.9 0 0 1-1.771-1.153A4.9 4.9 0 0 1 .526 16.55c-.247-.637-.415-1.363-.465-2.428l-.03-.712-.005-.194a76 76 0 0 1-.025-2.188V8.972q-.005-1.094.022-2.188L.03 6.59c.008-.225.018-.446.03-.712.05-1.065.218-1.79.465-2.428a4.9 4.9 0 0 1 1.156-1.772A4.9 4.9 0 0 1 3.451.525C4.089.278 4.814.11 5.879.06c.266-.012.488-.022.712-.03l.194-.006A80 80 0 0 1 8.973.001zm-1.028 5C6.152 5 3.746 9.167 5.67 12.5a5 5 0 0 0 4.331 2.5c3.849 0 6.254-4.167 4.33-7.5a5 5 0 0 0-4.33-2.5m0 2c2.309 0 3.753 2.499 2.598 4.5a3 3 0 0 1-2.597 1.5c-2.31 0-3.753-2.5-2.599-4.5A3 3 0 0 1 10.002 7m5.25-3.5a1.25 1.25 0 1 0 0 2.5 1.25 1.25 0 0 0 0-2.5"/></svg>
            {{ instagram }}
          </div>
        {% endif %}
        {% if instagram_accounts %}
          <div class="socials__accounts">
            {% for account in instagram_accounts %}
              {% if account %}
                <div class="socials__account">
                  <a href="https://instagram.com/{{ account|replace({' ': '.'}) }}">
                    {{ account }}
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endif %}

  </div> {# end Socials. #}

  {% if copyright_message %}
    <small class="copyright-message">{{ copyright_message }}</small>
  {% endif %}
</div>
